<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.shape.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>

<VBox fx:id="rootContainerVBox" spacing="20.0" style="-fx-border-color: red; -fx-border-radius: 10; -fx-border-width: 5;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="progressmanager.SingleSimpleProcessProgressController">
   <children>
      <Label fx:id="statusLabel" text="Running..." />
      <ProgressBar prefWidth="400.0" />
      <HBox alignment="CENTER_RIGHT">
         <children>
            <Button fx:id="cancelAndRollbackButton" mnemonicParsing="false" onAction="#cancelAndRollbackButtonOnAction" text="cancel and roll back" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
